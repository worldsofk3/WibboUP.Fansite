// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Dedicace {
  id        Int      @id @default(autoincrement())
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Interview {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  text        String
  link        String
  image       String
  video       String
  journalist  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model News {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  text        String
  image       String
  autorId     Int
  link        String
  user        User     @relation(fields: [autorId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([autorId])
}

model PermissionRank {
  id             Int    @id @default(autoincrement())
  permissionName String
  rankId         Int
  rank           Rank   @relation(fields: [rankId], references: [id])

  @@index([rankId])
}

model Rank {
  id             Int              @id @default(autoincrement())
  name           String           @unique()
  permissionRank PermissionRank[]
  user           User[]
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  password  String
  look      String?
  fonction  String?
  rankId    Int      @default(0)
  news      News[]
  rank      Rank     @relation(fields: [rankId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([rankId])
}
